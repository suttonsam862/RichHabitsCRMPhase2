root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,md}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sql]
indent_size = 2

[Makefile]
indent_style = tab