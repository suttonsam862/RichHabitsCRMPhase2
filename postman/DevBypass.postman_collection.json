{
  "info": {
    "name": "Dev Bypass Collection",
    "description": "Quick API endpoints for development testing with dev bypass authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-dev-auth",
            "value": "dev-allow",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base}}/healthz",
          "host": ["{{base}}"],
          "path": ["healthz"]
        },
        "description": "Basic health check endpoint to verify server is running"
      }
    },
    {
      "name": "Orders List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-dev-auth",
            "value": "dev-allow",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base}}/api/v1/orders?limit=5",
          "host": ["{{base}}"],
          "path": ["api", "v1", "orders"],
          "query": [
            {
              "key": "limit",
              "value": "5"
            }
          ]
        },
        "description": "Get a limited list of orders for quick testing"
      }
    }
  ]
}